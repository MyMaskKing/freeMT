<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="free.android.MainActivity" >



    <TextView
        android:id="@+id/welcom_tx"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="走马灯xml布局实现，哈哈。。。。" />

    <Button
        android:id="@+id/note_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/welcom_tx"
        android:layout_below="@+id/welcom_tx"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_rounded"
        android:text="@string/note_btn_name"
        android:onClick="transitionNote"/>

</RelativeLayout>