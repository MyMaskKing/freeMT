<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="free.android.MainActivity"
    android:background="@drawable/img_background_all_v2">

    <TextView
        android:id="@+id/id_activity_main_welcom_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="5dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true" />

    <Button
        android:id="@+id/note_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_activity_main_welcom_tx"
        android:layout_below="@+id/id_activity_main_welcom_tx"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_rounded"
        android:textColor="#efe1a42a"
        android:textStyle="bold"
        android:text="@string/note_btn_name"
        android:onClick="transitionNote"/>

</RelativeLayout>