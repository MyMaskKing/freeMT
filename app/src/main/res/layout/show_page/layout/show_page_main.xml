<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:match="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="free.android.activity.show_page.ShowMainActivity"
    android:background="@drawable/background_all_black">

    <com.roger.match.library.MatchTextView
        android:id="@+id/id_show_main_welcome"
        match:textSize="30sp"
        match:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.roger.match.library.MatchButton
        android:id="@+id/id_show_main_button"
        android:layout_below="@+id/id_show_main_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>