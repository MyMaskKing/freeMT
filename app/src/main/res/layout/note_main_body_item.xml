<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_id_note_main_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow >

        <!-- Id Hidden -->

        <TextView
            android:id="@+id/v_id_note_main_sub_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:visibility="gone" />

        <!-- No -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/v_id_note_main_no"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:background="@drawable/button_all_v1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textStyle="bold"/>
            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_height="wrap_content"
                android:text="@string/note_content"
                style="@style/text_style"
                android:fontFamily="monospace"/>

            <TextView
                android:paddingLeft="5dp"
                android:id="@+id/v_id_note_main_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                style="@style/text_content_style"/>
        </LinearLayout>

    </TableRow>

    <TableRow android:id="@+id/id_note_main_trow_second">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="end|bottom"
            android:background="@drawable/background_disabled_v1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/note_id"
                style="@style/text_disabled_style"/>
            <TextView
                android:id="@+id/v_id_note_main_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_disabled_style"/>

        </LinearLayout>

        <!-- 标签 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/v_id_note_main_tag_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|bottom"
                android:text="@string/note_tag"
                style="@style/text_style"/>

            <TextView
                android:paddingLeft="5dp"
                android:id="@+id/v_id_note_main_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_content_style" />
        </LinearLayout>

    </TableRow>

</TableLayout>