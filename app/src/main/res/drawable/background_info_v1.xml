<?xml version="1.0" encoding="utf-8"?><!-- android:shape:line(线)/rectangle(矩形)/oval(椭圆)/ring(圆)   -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="true">
    <!-- 边框线背景及边框线(虚线控制:dashGap虚线间距/dashWidth宽度) -->
    <stroke
        android:width="1dp"
        android:color="#000000"
        android:dashGap="5dp"
        android:dashWidth="10dp" />
    <!-- 圆角(四个角) -->
    <corners android:radius="13dp" />
    <!-- 背景渐变色 -->
    <gradient
        android:angle="10"
        android:centerX="0.0"
        android:centerY="0.5"
        android:startColor="#a4f8b281"
        android:centerColor="#7af8b281"
        android:endColor="#bfdbe29e"
        android:type="sweep" />
</shape>