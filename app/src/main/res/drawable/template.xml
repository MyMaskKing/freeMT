<?xml version="1.0" encoding="utf-8"?>
<!-- android:shape:line(线)/rectangle(矩形)/oval(椭圆)/ring(圆)   -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="true">
    <!-- 背景实色 -->
    <solid android:color="#d40dd7f2"/>
    <!-- 边框线背景及边框线(虚线控制:dashGap/dashWidth) -->
    <stroke
        android:width="7dp"
        android:color="#f2b83a"
        android:dashGap="5dp"
        android:dashWidth="10dp"
        />
    <!-- 圆角(四个角) -->
    <corners android:radius="20dp" />
    <!-- 背景渐变色 -->
    <gradient
        android:angle="-45"
        android:centerX="0.5"
        android:centerY="0.4"
        android:startColor="#144ea6"
        android:centerColor="#539cbe"
        android:endColor="#ed0cbaf2"
        android:type="linear" />
</shape>