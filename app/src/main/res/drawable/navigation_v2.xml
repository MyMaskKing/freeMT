<?xml version="1.0" encoding="utf-8"?><!-- android:shape:line(线)/rectangle(矩形)/oval(椭圆)/ring(圆)   -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="true">
    <!-- 背景实色 -->
    <solid android:color="#d4000000" />
    <!-- 边框线背景及边框线(虚线控制:dashGap虚线间距/dashWidth宽度) -->
    <stroke
        android:width="1dp"
        android:color="#ec9100"
        android:dashGap="10dp"
        android:dashWidth="10dp" />
    <!-- 圆角(四个角) -->
    <corners android:radius="3dp" />
    <!-- 背景渐变色 -->
</shape>